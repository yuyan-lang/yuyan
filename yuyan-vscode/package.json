{
  "name": "yuyan-vscode",
  "displayName": "yuyan-vscode",
  "description": "",
  "version": "0.0.20",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuyan-lang/yuyan",
    "directory": "yuyan-vscode"
  },
  "publisher": "yuyan-lang",
  "engines": {
    "vscode": "^1.73.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Yuyan",
      "properties": {
        "yuyan.languageSelector": {
          "type": "string",
          "default": "yuyan",
          "description": "Language selector for providers. Use '*' for all files, 'yuyan' for .yuyan files only, or any valid language ID."
        },
        "yuyan.compilerCommand": {
          "type": "array",
          "default": [
            {
              "fileEnding": "。豫",
              "command": "dune exec -- yyocamlc -c <filepath>"
            }
          ],
          "description": "Compiler commands to execute on file save. Each item should have 'fileEnding' and 'command' properties. Use <filepath> as placeholder for the actual file path.",
          "items": {
            "type": "object",
            "properties": {
              "fileEnding": {
                "type": "string",
                "description": "File ending to match (e.g., '。豫')"
              },
              "command": {
                "type": "string",
                "description": "Command to execute. Use <filepath> as placeholder for the actual file path."
              }
            },
            "required": [
              "fileEnding",
              "command"
            ]
          }
        }
      }
    },
    "languages": [
      {
        "id": "yuyan",
        "extensions": [
          ".yuyan",
          "。豫",
          ".yyon"
        ],
        "aliases": [
          "Yuyan"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./yu-char-xiaozhuan-dark.svg",
          "light": "./yu-char-xiaozhuan-light.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "yuyan",
        "scopeName": "source.yuyan",
        "path": "./yuyan.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "yuyan.restartyuyanlsp",
        "title": "Yuyan: Restart Yuyan Language Server 重启豫言的语言服务器"
      },
      {
        "command": "yuyan.debugshowtree",
        "title": "Yuyan: Debug Show Tree 调试显式语法树"
      },
      {
        "command": "yuyan.debugshowtrees",
        "title": "Yuyan: Debug Show Trees 调试显式语法树组"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "yuyan",
        "scopes": {
          "StringConstant": [
            "string.quoted"
          ],
          "NumericConstant": [
            "constant.numeric"
          ],
          "StructureKeyword": [
            "markup.bold"
          ],
          "ExpressionKeyword": [
            "keyword.operator"
          ],
          "UserDefinedOperatorKeyword": [
            "entity.other.inherited-class"
          ],
          "Identifier": [
            "variable.other"
          ],
          "Comment": [
            "comment.line"
          ]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint .",
    "pretest": "npm run lint && npm run compile",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.33",
    "@types/vscode": "^1.73.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.28.0",
    "glob": "^7.2.3",
    "mocha": "^9.2.2",
    "typescript": "^4.9.3"
  }
}